<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/pug3">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/contrase_a"
                    android:layout_height="45dp" android:id="@+id/tvContraseña" android:layout_weight="1"
                    android:textSize="30sp" android:layout_width="200dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/trContraseña" android:layout_weight="1" android:background="@color/colorPrimary"
                    android:autofillHints="" tools:targetApi="o"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginBottom="57dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="57dp">
            <TextView
                    android:text="@string/nombre"
                    android:layout_height="50dp" android:id="@+id/tvNombre" android:layout_weight="1"
                    android:textSize="30sp" android:layout_width="200dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp" android:id="@+id/trNombre" android:layout_weight="1"
                    android:textSize="30sp" android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/id"
                    android:layout_height="45dp" android:id="@+id/tvId" android:layout_weight="1"
                    android:textSize="30sp" android:layout_width="200dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp" android:id="@+id/trId" android:layout_weight="1"
                    android:textSize="30sp" android:background="@color/colorPrimary" android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="123dp"
            android:layout_marginTop="350dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">
        <Button
                android:text="Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bEnviar" android:layout_weight="1"
                android:textSize="20sp" android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light"/>
        <Button
                android:text="Dar de Baja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bBorrar" android:layout_weight="1"
                android:textSize="20sp" android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>